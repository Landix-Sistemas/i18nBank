{
  "compilerOptions": {
    "target": "es2016",
    "module": "esnext", // "commonjs" "es2015"
    "strict": true,
    "jsx": "preserve",
    "moduleResolution": "node",
    "isolatedModules": false,
    "allowJs": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "allowSyntheticDefaultImports": false,
    "noImplicitAny": false,
    "noImplicitThis": true,
    "strictNullChecks": false,
    "removeComments": true,
    "suppressImplicitAnyIndexErrors": true,
    "sourceMap": true,
    "baseUrl": ".",
    "outDir": "tmp_js",
    "lib": [
      "dom",
      "es7",
      "es2015",
      "es2015.promise"
    ]
  },
  "include": [
    "./src/**/*.ts"
  ],
  "compileOnSave": false
}
